---
import projects from '../../config/projects.json';
---

<h1 class='text-center font-bold text-5xl my-5'>Projects</h1>

{
  projects.map((project) => (
    <div class='flex text-center md:text-left'>
      <div class='flex 1 flex-col gap-y-3'>
        <h2 class='text-2xl font-bold my-4'>{project.title}</h2>
        <p class='my-2'>{project.description}</p>
        <button class='bg-indigo-500 px-3 py-2 hover:bg-indigo-400 rounded-md w-40'>
          more
        </button>
      </div>
      <div class='flex 1'>
        <img src={project.image} alt='' class='w-72 m-auto' />
      </div>
    </div>
  ))
}
